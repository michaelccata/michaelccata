source "https://rubygems.org"
# Core Jekyll
gem "jekyll", "~> 4.3.3"
# Jekyll dependencies (from your previous setup)
gem "addressable", "~> 2.8.7"
gem "colorator", "~> 1.1.0"
gem "concurrent-ruby", "~> 1.3.3"
gem "em-websocket", "~> 0.5.3"
gem "forwardable-extended", "~> 2.6.0"
gem "i18n", "~> 1.14.5"
gem "jekyll-sass-converter", "~> 3.0.0"
gem "jekyll-watch", "~> 2.2.1"
gem "kramdown", "~> 2.4.0"
gem "kramdown-parser-gfm", "~> 1.1.0"
gem "liquid", "~> 4.0.4"
gem "listen", "~> 3.9.0"
gem "mercenary", "~> 0.4.0"
gem "pathutil", "~> 0.16.2"
gem "rexml", "~> 3.3.3"
gem "rouge", "~> 4.3.0"
gem "safe_yaml", "~> 1.0.5"
gem "sass-embedded", "~> 1.77.8"
gem "terminal-table", "~> 3.0.2"
# Essential Jekyll plugins
gem "jekyll-paginate", "~> 1.1.0"
gem "jekyll-feed", "~> 0.17.0"
gem "jekyll-sitemap", "~> 1.4.0"
gem "jekyll-seo-tag", "~> 2.8.0"
# Additional helpful plugins
gem "jekyll-redirect-from", "~> 0.16.0"
gem "jekyll-include-cache", "~> 0.2.1"
# Windows and JRuby does not include zoneinfo files, so bundle the tzinfo-data gem
# and associated library.
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", "~> 1.2"
  gem "tzinfo-data"
end
# Performance-booster for watching directories on Windows
gem "wdm", "~> 0.1.1", :platforms => [:mingw, :x64_mingw, :mswin]
# Lock `http_parser.rb` gem to `v0.8.0` on JRuby builds since newer versions of the gem
# do not have a Java counterpart.
gem "http_parser.rb", "~> 0.8.0", :platforms => [:jruby]
# Lock ffi version
gem "ffi", "~> 1.15.5"
# Add webrick as it's no longer bundled with Ruby 3.0+
gem "webrick", "~> 1.8.1"
# Additional dependencies from your previous setup
gem "eventmachine", "~> 1.2.7"
gem "public_suffix", "~> 6.0.1"
gem "rb-fsevent", "~> 0.11.2"
gem "rb-inotify", "~> 0.11.1"
gem "unicode-display_width", "~> 2.5.0"
